<html>

<head>
  <meta charset="UTF-8" />
  <!-- FontAwesomeの読み込み -->
  <link rel="stylesheet" href="application.css" />
  <title>WebCampBackendNew</title>
</head>

<body class="in-body">

<div class="flash">
  <%= flash[:de] %>
</div>


<h1 class="in-h1">Books</h1>

<table>
<thead class="in-thead">
<tr class="in-tr">
  <th>Title</th>
  <th>Body</th>
  <th></th>
</tr>
</thead>


<tbody>

<% @books.each do |list| %>
<tr>
<td class="td"><span><%= list.title %></span></td>
<td class="td"><span><%= list.body %></span></td>

<td class="td"><%= link_to "Show", book_path(list.id) %></td>
<td class="td"><%= link_to "Edit", edit_book_path(list.id) %></td>
<td class="td"><%= link_to "Destroy", destroy_book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %></td>

</tr>

<% end %>

</tbody>

</table>




<h2 class="h">New book</h2>


<div class="error">
<% if @book.errors.any? %>
  <p class="error-title"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
  <div class="error-txt">
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
</div>

<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4 class="hh">Title</h4>
  <%= f.text_field :title %>

  <h4 class="hh">Body</h4>
  <%= f.text_area :body %>

  <p class="hh"><%= f.submit 'Create Book' %></p>
<% end %>


</body>
</html>